<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Register</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Lora', serif;
        }
    </style>

    
</head>

<body style="margin: 0; padding: 0; background: linear-gradient(to bottom, #ff9fdf, #F0569A);" class="h-screen flex justify-center items-center">
    <div class="bg-white shadow-lg rounded-lg py-8 px-6 w-full max-w-lg">  
        <h1 class="text-5xl text-center text-gray-700 mb-12 font-bold">T-POP Hub</h1>    
        <form action="/register" method="POST" novalidate>
            <div class="flex flex-col items-center">
                <!-- First Name and Last Name -->
                <div class="form-group w-full max-w-md mb-4">
                    <div class="flex justify-between">
                        <div class="relative w-full mr-2 flex items-center">
                            <span class="absolute ml-3 text-gray-500 flex items-center justify-center">
                                <i class="fas fa-user"></i>
                            </span>
                            <input type="text" name="first_name" id="_rfirstname" class="form-control rounded-xl pl-10 w-full py-4 border border-gray-300" placeholder="First Name"
                                value="<%= (locals.old_data) ? old_data.first_name : ''; %>" required>
                        </div>
                        <div class="relative w-full ml-2 flex items-center">
                            <span class="absolute ml-3 text-gray-500 flex items-center justify-center">
                                <i class="fas fa-user"></i>
                            </span>
                            <input type="text" name="last_name" id="_rlastname" class="form-control rounded-xl pl-10 w-full py-4 border border-gray-300" placeholder="Last Name"
                                value="<%= (locals.old_data) ? old_data.last_name : ''; %>" required>
                        </div>
                    </div>
                </div>
                <!-- Username -->
                <div class="form-group w-full max-w-md mb-4">
                    <div class="relative flex items-center">
                        <span class="absolute ml-3 text-gray-500 flex items-center justify-center">
                            <i class="fas fa-user"></i>
                        </span>
                        <input type="text" name="user_name" id="_rname" class="form-control rounded-xl pl-10 w-full py-4 border border-gray-300" placeholder="Username"
                            value="<%= (locals.old_data) ? old_data.user_name : ''; %>" required>
                    </div>
                </div>
                <!-- Email -->
                <div class="form-group w-full max-w-md mb-4">
                    <div class="relative flex items-center">
                        <span class="absolute ml-3 text-gray-500 flex items-center justify-center">
                            <i class="fas fa-envelope"></i>
                        </span>
                        <input type="email" name="user_email" id="_remail" class="form-control rounded-xl pl-10 w-full py-4 border border-gray-300" placeholder="Email"
                            value="<%= (locals.old_data) ? old_data.user_email : ''; %>" required>
                    </div>
                </div>
                <!-- Password -->
                <div class="form-group w-full max-w-md mb-4">
                    <div class="relative flex items-center">
                        <span class="absolute ml-3 text-gray-500 flex items-center justify-center">
                            <i class="fas fa-lock"></i>
                        </span>
                        <input type="password" name="user_pass" id="_rpass" class="form-control rounded-xl pl-10 w-full py-4 border border-gray-300" placeholder="Password"
                            required>
                    </div>
                </div>
            </div>
            <div class="flex flex-col items-center">
                <% if (locals.register_error) { register_error.forEach(function(error_msg){ %>
                    <div class="alert alert-danger w-full max-w-md" role="alert">
                        <%= error_msg %>
                    </div>
                <% }); } %>
            
                <button type="submit" class="btn bg-blue-500 text-white mt-4 w-40 max-w-md text-center rounded-xl py-2 hover:bg-blue-600">Sign Up</button>
                <a href="/login" class="btn btn-secondary mt-4 w-40 max-w-md text-center rounded-xl py-2">Login</a>
            </div>
            
        </form>
    </div>
</body>

</html>
