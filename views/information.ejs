                removeButton.textContent = 'ลบศิลปิน';

                // เพิ่มปุ่มลบลงด้านล่างของ artistSection
                artistSection.appendChild(removeButton);

                // เพิ่ม event listener ให้กับ file-input ใหม่
                initializeFileInputs(artistSection);

                // เพิ่ม event listener ให้กับปุ่มลบศิลปิน
                removeButton.addEventListener('click', function () {
                    artistSection.remove();
                });
            });

