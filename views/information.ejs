            height: 100%;
            object-fit: cover; /* ปรับรูปให้พอดีกับกรอบ */
            position: absolute;
            top: 0;
            left: 0;
            display: none; /* ซ่อนรูปภาพเริ่มต้น */
        }

        input[type="file"] {
