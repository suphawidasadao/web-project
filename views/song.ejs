    text-align: left; /* จัดให้อยู่ริมซ้าย */
}
 
 
        .grid-container {
            display: grid;
            grid-template-columns: repeat(4, 1fr); /* 4 การ์ดต่อแถว */
            gap: 15px; /* ระยะห่างระหว่างการ์ด */
            justify-content: center;
            width: 70%; /* กำหนดขนาดความกว้างของกริด */
            margin: 0 auto; /* จัดให้กริดอยู่กึ่งกลางของหน้า */
            padding-bottom: 40px;
 
        }
 
        .card {
            background-color: white;
            border-radius: 10px;
            padding: 10px;
            width: 210px;
            height: 290px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
 
        .card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }
 
        .info {
            padding: 10px 0;
        }
 
        .title {
            font-weight: bold;
            font-size: 16px;
            margin-bottom: 5px;
        }
 
        .artist {
            font-size: 14px;
            color: #555;
            margin-bottom: 5px;
        }
 
        .views {
            font-size: 12px;
            color: #777;
        }
 
        .footer-container {
            background: linear-gradient(to bottom, #ff9fdf, #F0569A);
            padding: 100px 0;
            text-align: center;
            color: white;
        }
 
    </style>
</head>
