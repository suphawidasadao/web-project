    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
 
        .header {
            background: linear-gradient(to bottom, #ff9fdf, #F0569A);
            text-align: center;
            padding: 50px 0;
            color: white;
        }
 
        body {
            font-family: 'Prompt', sans-serif;
            background-color: #fff;
        }
 
        .container {
            position: relative;
            padding: 20px 0;
        }
        h1 {
    font-family: 'Bungee', sans-serif;
