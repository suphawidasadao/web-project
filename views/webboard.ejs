                    <div class="flex items-center space-x-1 favorite-btn">
                        <span class="material-icons">favorite</span>
                        <p>5</p>
                    </div>
                    <div class="flex items-center space-x-1 comment-btn">
                        <span class="material-icons">comment</span>
                        <p>2</p>
                    </div>
                </div>
            </div>
            <!-- Repeat the card 5 more times -->
            <div class="bg-white p-4 rounded-lg shadow-lg post-card">
                <img src="https://thethaiger.com/th/wp-content/uploads/2022/04/jorinja_277115308_727658871562718_1886721758610100878_n-656x820.jpg"
                    alt="Fan Post" class="w-full rounded-lg mb-2 post-image">
                <div class="flex items-center justify-between text-pink-500">
                    <div class="flex items-center space-x-1 favorite-btn">
                        <span class="material-icons">favorite</span>
                        <p>5</p>
                    </div>
                    <div class="flex items-center space-x-1 comment-btn">
                        <span class="material-icons">comment</span>
                        <p>2</p>
                    </div>
                </div>
            </div>
            <div class="bg-white p-4 rounded-lg shadow-lg post-card">
                <img src="https://today-obs.line-scdn.net/0hzs_aL1guJVxiGDcx_ZxaC1pOKS1Rfj9VQHljPBIeemVGNGBaVn12P0YdL3BHLGRaQn9uPkIQKG1IKmtYWQ/w644"
                    alt="Fan Post" class="w-full rounded-lg mb-2 post-image">
                <div class="flex items-center justify-between text-pink-500">
                    <div class="flex items-center space-x-1 favorite-btn">
                        <span class="material-icons">favorite</span>
                        <p>5</p>
                    </div>
                    <div class="flex items-center space-x-1 comment-btn">
                        <span class="material-icons">comment</span>
                        <p>2</p>
                    </div>
                </div>
            </div>
            <div class="bg-white p-4 rounded-lg shadow-lg post-card">
                <img src="https://s359.kapook.com/r/600/auto/pagebuilder/7ecb664c-e3ef-4a26-952d-85650c4cc45d.jpg"
                    alt="Fan Post" class="w-full rounded-lg mb-2 post-image">
                <div class="flex items-center justify-between text-pink-500">
                    <div class="flex items-center space-x-1 favorite-btn">
                        <span class="material-icons">favorite</span>
                        <p>5</p>
                    </div>
                    <div class="flex items-center space-x-1 comment-btn">
                        <span class="material-icons">comment</span>
                        <p>2</p>
                    </div>
                </div>
            </div>
            <div class="bg-white p-4 rounded-lg shadow-lg post-card">
                <img src="https://www.thebangkokinsight.com/wp-content/uploads/2023/08/%E0%B8%AD%E0%B9%8A%E0%B8%B0%E0%B8%AD%E0%B8%B2%E0%B8%A2366118642_300184725868006_9068132732377691414_n.jpg"
                    alt="Fan Post" class="w-full rounded-lg mb-2 post-image">
                <div class="flex items-center justify-between text-pink-500">
                    <div class="flex items-center space-x-1 favorite-btn">
                        <span class="material-icons">favorite</span>
                        <p>5</p>
                    </div>
                    <div class="flex items-center space-x-1 comment-btn">
