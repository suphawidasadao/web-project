    <script>
        // ค้นหาทุกการ์ดโพสต์
        const postCards = document.querySelectorAll('.post-card');
        const modal = document.getElementById('modal');
        const modalImage = document.getElementById('modal-image');
        const modalTitle = document.getElementById('modal-title');
        const modalText = document.getElementById('modal-text');
        const closeBtn = document.querySelector('.close-btn');

        // Loop ผ่านการ์ดแต่ละใบเพื่อตรวจจับการคลิก
        postCards.forEach(card => {
            card.addEventListener('click', function () {
                // แสดงป็อปอัป
                modal.style.display = 'flex';

                // ตั้งค่าเนื้อหาของป็อปอัป
                const postImage = this.querySelector('.post-image').src;
                modalImage.src = postImage;
                modalTitle.textContent = 'Post Details'; // คุณสามารถตั้งค่าเนื้อหาอื่น ๆ ที่ต้องการแสดงได้ที่นี่
                modalText.textContent = 'รายละเอียดของโพสต์นี้...';
            });
        });

        // ฟังก์ชันปิดป็อปอัป
        closeBtn.addEventListener('click', function () {
            modal.style.display = 'none';
        });

        // ปิดป็อปอัปเมื่อคลิกนอกป็อปอัป
        window.addEventListener('click', function (e) {
            if (e.target == modal) {
                modal.style.display = 'none';
            }
        });

        const createPostBtn = document.querySelectorAll('.create-post-btn');

        createPostBtn.forEach(btn => {
            btn.addEventListener('click', function () {
                window.location.href = "http://localhost:3000/Create_post"; // เปลี่ยนหน้าเมื่อคลิก
            });
        });

    </script>


