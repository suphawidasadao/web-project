    <footer class="bg-gradient-to-r p-20" style="background: linear-gradient(to bottom, #ff9fdf, #F0569A);">
    </footer>

    <!-- Modal -->
    <div id="modal" class="modal" style="display:none;">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <h2 class="text-xl font-semibold mb-2" id="modal-title">Post Details</h2>
            <div class="flex items-center justify-center">
                <img id="modal-image" src="" alt="Post Image" class="w-full rounded-lg mb-4 items-center" />
            </div>
            <p id="modal-text" class="my-4">Details here</p>
            <div class="mb-4">
                <div class="flex items-start mb-3">
                    <img src="https://via.placeholder.com/40" alt="Commenter Profile"
                        class="rounded-full w-10 h-10 mr-3">
                    <div>
                        <span class="font-bold text-sm">Commenter 1</span>
                        <p class="text-sm text-gray-600 mt-1">This is a comment on the post. It provides feedback or
                            thoughts related to the content.</p>
                    </div>
                </div>
                <div class="flex items-start mb-3">
                    <img src="https://via.placeholder.com/40" alt="Commenter Profile"
                        class="rounded-full w-12 h-10 mr-3">
                    <div>
                        <span class="font-bold text-sm">Commenter 2</span>
                        <p class="text-sm text-gray-600 mt-1">Another comment on the post. Additional thoughts or
                            discussion points are included here.</p>
                    </div>
                </div>
            </div>
            <textarea id="comment-box" class="w-full p-2 border border-gray-300 rounded-lg" rows="1"
                placeholder="Add your comment..."></textarea>
            <button id="submit-comment"
                class="mt-2 bg-pink-500 hover:bg-pink-600 text-white font-bold py-2 px-4 rounded-full">
                Submit
            </button>
        </div>
    </div>


    <script>
        // ค้นหาทุกการ์ดโพสต์
        const postCards = document.querySelectorAll('.post-card');
        const modal = document.getElementById('modal');
        const modalImage = document.getElementById('modal-image');
        const modalTitle = document.getElementById('modal-title');
        const modalText = document.getElementById('modal-text');
        const closeBtn = document.querySelector('.close-btn');

        // Loop ผ่านการ์ดแต่ละใบเพื่อตรวจจับการคลิก
        postCards.forEach(card => {
            card.addEventListener('click', function () {
                // แสดงป็อปอัป
                modal.style.display = 'flex';

                // ตั้งค่าเนื้อหาของป็อปอัป
                const postImage = this.querySelector('.post-image').src;
                modalImage.src = postImage;
                modalTitle.textContent = 'Post Details'; // คุณสามารถตั้งค่าเนื้อหาอื่น ๆ ที่ต้องการแสดงได้ที่นี่
                modalText.textContent = 'รายละเอียดของโพสต์นี้...';
            });
        });

        // ฟังก์ชันปิดป็อปอัป
        closeBtn.addEventListener('click', function () {
            modal.style.display = 'none';
        });

        // ปิดป็อปอัปเมื่อคลิกนอกป็อปอัป
        window.addEventListener('click', function (e) {
            if (e.target == modal) {
                modal.style.display = 'none';
            }
        });
    </script>


</body>

</html>