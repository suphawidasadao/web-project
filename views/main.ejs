    </div>
    <footer>
        <div class="footer1"></div>
    </footer>

    <script>
        const images = document.querySelectorAll('.banner img');
        let index = 0;

        function showNextImage() {
            images[index].style.display = 'none'; // ซ่อนภาพปัจจุบัน
            index = (index + 1) % images.length; // เปลี่ยนดัชนีภาพถัดไป
            images[index].style.display = 'block'; // แสดงภาพถัดไป
        }

        // เริ่มแสดงภาพแรก
        images.forEach((img, idx) => {
            img.style.display = idx === 0 ? 'block' : 'none'; // แสดงภาพแรก
        });

        setInterval(showNextImage, 3000); // เปลี่ยนทุก ๆ 3 วินาที
    </script>


</body>

</html>